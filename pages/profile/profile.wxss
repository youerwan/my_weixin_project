page{
    background-color: #f1f1f1;
}
.profile-card {
    width: 100%;
    height: 450rpx;
    background-color: #f60;
    display: flex;
    justify-content: center;
    align-items: center;
}

.profile-name-icon {
    width: 200rpx;
    height: 200rpx;
    border-radius: 120rpx;
    border: 10rpx solid rgba(0, 0, 0, 0.1);
}

.item-text {
    width: 100%;
    height: 150rpx;
    
}
.profile-text-item {
    background-color: #fff;
    width: 100%;
    height: 80rpx;
    padding-left: 30rpx;
    border-bottom: 1rpx solid #ccc;
    font-size: 16px;
    font-weight:550;
    display: flex;
    align-items: center;
}

